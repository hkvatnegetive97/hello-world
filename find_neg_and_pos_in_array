void main()

{	int a[50],c_n=0,c_p=0,i,n;
	clrscr();
	printf("enter the amount of array\n");
	scanf("%d",&n);
	printf("enter the elements of array\n");
	for(i=0;i<n;i++)
	scanf("%d",&a[i]);
    for (i = 0; i < n; i++)
    if (a[i]<0)
    c_n++;
    else
    c_p++;
    printf("negetives are %d in array\n",c_n);
    printf("positive are %d in array\n",c_p);
    getch();
}
